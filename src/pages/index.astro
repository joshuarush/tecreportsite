---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Dashboard">
  <div class="dashboard">
    <!-- Command Bar -->
    <div class="command-bar">
      <div class="command-inner">
        <div class="command-left">
          <span class="command-icon">
            <svg viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
            </svg>
          </span>
          <input
            type="text"
            id="quickSearch"
            placeholder="Search committees, donors, or filers..."
            class="command-input"
            autocomplete="off"
          />
        </div>
        <div class="command-shortcuts">
          <kbd>/</kbd>
          <span>to search</span>
        </div>
      </div>
    </div>

    <!-- Main Grid -->
    <div class="main-grid">
      <!-- Left Column: Navigation -->
      <aside class="sidebar">
        <nav class="nav-section">
          <div class="nav-header">Search</div>
          <a href="/advanced" class="nav-item">
            <span class="nav-icon">
              <svg viewBox="0 0 16 16" fill="currentColor">
                <path d="M6.5 1a5.5 5.5 0 014.383 8.823l3.896 3.9a.75.75 0 01-1.061 1.06l-3.895-3.897A5.5 5.5 0 116.5 1zm0 1.5a4 4 0 100 8 4 4 0 000-8z"/>
              </svg>
            </span>
            List Builder
            <span class="nav-badge">Filters</span>
          </a>
          <a href="/query-builder" class="nav-item">
            <span class="nav-icon">
              <svg viewBox="0 0 16 16" fill="currentColor">
                <path d="M14 1H2a1 1 0 00-1 1v12a1 1 0 001 1h12a1 1 0 001-1V2a1 1 0 00-1-1zM2 0a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V2a2 2 0 00-2-2H2z"/>
                <path d="M6 4h4v1H6V4zm0 3h4v1H6V7zm0 3h4v1H6v-1z"/>
              </svg>
            </span>
            Expert Mode
            <span class="nav-badge">SQL</span>
          </a>
        </nav>

        <nav class="nav-section">
          <div class="nav-header">Browse</div>
          <a href="/search/committees" class="nav-item">
            <span class="nav-icon">
              <svg viewBox="0 0 16 16" fill="currentColor">
                <path d="M8 8a3 3 0 100-6 3 3 0 000 6zm2-3a2 2 0 11-4 0 2 2 0 014 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
              </svg>
            </span>
            Committees
          </a>
          <a href="/search/contributors" class="nav-item">
            <span class="nav-icon">
              <svg viewBox="0 0 16 16" fill="currentColor">
                <path d="M8 0a8 8 0 100 16A8 8 0 008 0zM1.5 8a6.5 6.5 0 1113 0 6.5 6.5 0 01-13 0z"/>
                <path d="M8 3.5a.5.5 0 01.5.5v4a.5.5 0 01-.5.5H5a.5.5 0 010-1h2.5V4a.5.5 0 01.5-.5z"/>
              </svg>
            </span>
            Donors
          </a>
        </nav>

        <div class="sidebar-footer">
          <a href="https://www.ethics.state.tx.us/search/cf/" target="_blank" rel="noopener" class="source-link">
            <span class="source-dot"></span>
            TEC Data 2020–Present
          </a>
        </div>
      </aside>

      <!-- Center: Quick Actions -->
      <main class="content">
        <!-- Stats Row -->
        <div class="stats-row">
          <div class="stat">
            <span class="stat-value">8.2M</span>
            <span class="stat-label">Contributions</span>
          </div>
          <div class="stat">
            <span class="stat-value">1.5M</span>
            <span class="stat-label">Expenditures</span>
          </div>
          <div class="stat">
            <span class="stat-value">22K</span>
            <span class="stat-label">Filers</span>
          </div>
          <div class="stat">
            <span class="stat-value">95K</span>
            <span class="stat-label">Reports</span>
          </div>
        </div>

        <!-- Quick Actions Grid -->
        <div class="actions-section">
          <div class="section-header">
            <h2>Quick Actions</h2>
          </div>
          <div class="actions-grid">
            <a href="/advanced" class="action-card">
              <div class="action-icon action-icon-blue">
                <svg viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="action-content">
                <span class="action-title">List Builder</span>
                <span class="action-desc">Filter by donor, amount, date, party</span>
              </div>
              <kbd class="action-kbd">S</kbd>
            </a>

            <a href="/query-builder" class="action-card">
              <div class="action-icon action-icon-violet">
                <svg viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="action-content">
                <span class="action-title">Expert Mode</span>
                <span class="action-desc">Complex boolean queries, aggregations</span>
              </div>
              <kbd class="action-kbd">Q</kbd>
            </a>

            <a href="/search/committees" class="action-card">
              <div class="action-icon action-icon-red">
                <svg viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                </svg>
              </div>
              <div class="action-content">
                <span class="action-title">Browse Committees</span>
                <span class="action-desc">Profiles, top donors, timelines</span>
              </div>
              <kbd class="action-kbd">C</kbd>
            </a>

            <a href="/search/contributors" class="action-card">
              <div class="action-icon action-icon-green">
                <svg viewBox="0 0 20 20" fill="currentColor">
                  <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z" />
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="action-content">
                <span class="action-title">Donor Lookup</span>
                <span class="action-desc">Find all contributions by name</span>
              </div>
              <kbd class="action-kbd">D</kbd>
            </a>
          </div>
        </div>

      </main>

      <!-- Right Column: Info -->
      <aside class="info-panel">
        <div class="info-section">
          <div class="info-header">Keyboard Shortcuts</div>
          <div class="shortcut-list">
            <div class="shortcut">
              <kbd>/</kbd>
              <span>Focus search</span>
            </div>
            <div class="shortcut">
              <kbd>S</kbd>
              <span>List builder</span>
            </div>
            <div class="shortcut">
              <kbd>Q</kbd>
              <span>Expert Mode</span>
            </div>
            <div class="shortcut">
              <kbd>C</kbd>
              <span>Committees</span>
            </div>
            <div class="shortcut">
              <kbd>D</kbd>
              <span>Donors</span>
            </div>
          </div>
        </div>

        <div class="info-section">
          <div class="info-header">Data Coverage</div>
          <div class="coverage-list">
            <div class="coverage-item">
              <span class="coverage-label">Period</span>
              <span class="coverage-value">2020 – Present</span>
            </div>
            <div class="coverage-item">
              <span class="coverage-label">Last Updated</span>
              <span class="coverage-value">Jan 2025</span>
            </div>
            <div class="coverage-item">
              <span class="coverage-label">Source</span>
              <span class="coverage-value">TX Ethics Commission</span>
            </div>
          </div>
        </div>
      </aside>
    </div>
  </div>
</BaseLayout>

<script>
  // Keyboard shortcuts
  document.addEventListener('keydown', (e) => {
    // Ignore if typing in an input
    if (e.target instanceof HTMLInputElement || e.target instanceof HTMLTextAreaElement) {
      return;
    }

    switch (e.key) {
      case '/':
        e.preventDefault();
        document.getElementById('quickSearch')?.focus();
        break;
      case 's':
      case 'S':
        window.location.href = '/advanced';
        break;
      case 'q':
      case 'Q':
        window.location.href = '/query-builder';
        break;
      case 'c':
      case 'C':
        window.location.href = '/search/committees';
        break;
      case 'd':
      case 'D':
        window.location.href = '/search/contributors';
        break;
    }
  });

  // Quick search functionality
  const searchInput = document.getElementById('quickSearch') as HTMLInputElement;
  if (searchInput) {
    searchInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && searchInput.value.trim()) {
        window.location.href = `/search/committees?q=${encodeURIComponent(searchInput.value.trim())}`;
      }
      if (e.key === 'Escape') {
        searchInput.blur();
      }
    });
  }
</script>

<style>
  @import url('https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400;500&family=IBM+Plex+Sans:wght@400;500;600&display=swap');

  .dashboard {
    --bg-base: #fafafa;
    --bg-surface: #ffffff;
    --bg-elevated: #f5f5f5;
    --bg-hover: #ebebeb;
    --border: rgba(0, 0, 0, 0.08);
    --border-hover: rgba(0, 0, 0, 0.15);
    --text-primary: #171717;
    --text-secondary: #525252;
    --text-tertiary: #a3a3a3;
    --accent-blue: #2563eb;
    --accent-violet: #7c3aed;
    --accent-red: #dc2626;
    --accent-green: #16a34a;
    --font-sans: 'IBM Plex Sans', -apple-system, sans-serif;
    --font-mono: 'IBM Plex Mono', monospace;

    background: var(--bg-base);
    min-height: 100vh;
    font-family: var(--font-sans);
    color: var(--text-primary);
  }

  /* Command Bar */
  .command-bar {
    position: sticky;
    top: 0;
    z-index: 100;
    background: rgba(250, 250, 250, 0.9);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
    padding: 0 1rem;
  }

  .command-inner {
    max-width: 1400px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 52px;
  }

  .command-left {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex: 1;
    max-width: 500px;
  }

  .command-icon {
    color: var(--text-tertiary);
    width: 16px;
    height: 16px;
    flex-shrink: 0;
  }

  .command-icon svg {
    width: 100%;
    height: 100%;
  }

  .command-input {
    flex: 1;
    background: transparent;
    border: none;
    outline: none;
    font-size: 0.875rem;
    font-family: var(--font-sans);
    color: var(--text-primary);
  }

  .command-input::placeholder {
    color: var(--text-tertiary);
  }

  .command-shortcuts {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: var(--text-tertiary);
  }

  kbd {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 20px;
    height: 20px;
    padding: 0 6px;
    background: var(--bg-elevated);
    border: 1px solid rgba(0, 0, 0, 0.12);
    border-radius: 4px;
    font-family: var(--font-mono);
    font-size: 0.6875rem;
    color: var(--text-secondary);
    box-shadow: 0 1px 0 rgba(0, 0, 0, 0.06);
  }

  /* Main Grid */
  .main-grid {
    display: grid;
    grid-template-columns: 200px 1fr 220px;
    gap: 0;
    max-width: 1400px;
    margin: 0 auto;
    min-height: calc(100vh - 53px);
  }

  @media (max-width: 1024px) {
    .main-grid {
      grid-template-columns: 1fr;
    }
    .sidebar, .info-panel {
      display: none;
    }
  }

  /* Sidebar */
  .sidebar {
    border-right: 1px solid var(--border);
    padding: 1rem 0;
    display: flex;
    flex-direction: column;
  }

  .nav-section {
    padding: 0 0.75rem;
    margin-bottom: 1.5rem;
  }

  .nav-header {
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-tertiary);
    padding: 0 0.5rem;
    margin-bottom: 0.5rem;
  }

  .nav-item {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    padding: 0.5rem;
    border-radius: 6px;
    font-size: 0.8125rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .nav-item:hover {
    background: var(--bg-hover);
    color: var(--text-primary);
  }

  .nav-icon {
    width: 16px;
    height: 16px;
    color: var(--text-tertiary);
    flex-shrink: 0;
  }

  .nav-icon svg {
    width: 100%;
    height: 100%;
  }

  .nav-badge {
    margin-left: auto;
    padding: 0.125rem 0.375rem;
    background: var(--bg-elevated);
    border-radius: 4px;
    font-size: 0.625rem;
    font-weight: 500;
    text-transform: uppercase;
    color: var(--text-tertiary);
  }

  .sidebar-footer {
    margin-top: auto;
    padding: 1rem 0.75rem;
    border-top: 1px solid var(--border);
  }

  .source-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: var(--text-tertiary);
    text-decoration: none;
    transition: color 0.15s ease;
  }

  .source-link:hover {
    color: var(--text-secondary);
  }

  .source-dot {
    width: 6px;
    height: 6px;
    background: var(--accent-green);
    border-radius: 50%;
  }

  /* Content */
  .content {
    padding: 1.5rem 2rem;
  }

  /* Stats Row */
  .stats-row {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1px;
    background: var(--border);
    border: 1px solid var(--border);
    border-radius: 8px;
    overflow: hidden;
    margin-bottom: 2rem;
  }

  .stat {
    background: var(--bg-surface);
    padding: 1rem 1.25rem;
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: 1.5rem;
    font-weight: 600;
    font-family: var(--font-mono);
    color: var(--text-primary);
    letter-spacing: -0.02em;
  }

  .stat-label {
    display: block;
    font-size: 0.6875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-tertiary);
    margin-top: 0.25rem;
  }

  @media (max-width: 640px) {
    .stats-row {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Section Headers */
  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.875rem;
  }

  .section-header h2 {
    font-size: 0.8125rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .section-hint {
    font-size: 0.6875rem;
    color: var(--text-tertiary);
  }

  /* Actions Grid */
  .actions-section {
    margin-bottom: 2rem;
  }

  .actions-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
  }

  @media (max-width: 768px) {
    .actions-grid {
      grid-template-columns: 1fr;
    }
  }

  .action-card {
    display: flex;
    align-items: center;
    gap: 0.875rem;
    padding: 0.875rem 1rem;
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: 8px;
    text-decoration: none;
    transition: all 0.15s ease;
  }

  .action-card:hover {
    background: var(--bg-elevated);
    border-color: var(--border-hover);
  }

  .action-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 6px;
    flex-shrink: 0;
  }

  .action-icon svg {
    width: 18px;
    height: 18px;
  }

  .action-icon-blue {
    background: rgba(37, 99, 235, 0.1);
    color: var(--accent-blue);
  }

  .action-icon-violet {
    background: rgba(124, 58, 237, 0.1);
    color: var(--accent-violet);
  }

  .action-icon-red {
    background: rgba(220, 38, 38, 0.1);
    color: var(--accent-red);
  }

  .action-icon-green {
    background: rgba(22, 163, 74, 0.1);
    color: var(--accent-green);
  }

  .action-content {
    flex: 1;
    min-width: 0;
  }

  .action-title {
    display: block;
    font-size: 0.8125rem;
    font-weight: 500;
    color: var(--text-primary);
  }

  .action-desc {
    display: block;
    font-size: 0.75rem;
    color: var(--text-tertiary);
    margin-top: 0.125rem;
  }

  .action-kbd {
    flex-shrink: 0;
    opacity: 0.5;
  }

  .action-card:hover .action-kbd {
    opacity: 1;
  }

  /* Info Panel */
  .info-panel {
    border-left: 1px solid var(--border);
    padding: 1.5rem 1rem;
  }

  .info-section {
    margin-bottom: 2rem;
  }

  .info-header {
    font-size: 0.6875rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-tertiary);
    margin-bottom: 0.75rem;
  }

  .shortcut-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .shortcut {
    display: flex;
    align-items: center;
    gap: 0.625rem;
    font-size: 0.75rem;
    color: var(--text-secondary);
  }

  .shortcut kbd {
    width: 24px;
  }

  .coverage-list {
    display: flex;
    flex-direction: column;
    gap: 0.625rem;
  }

  .coverage-item {
    display: flex;
    justify-content: space-between;
    font-size: 0.75rem;
  }

  .coverage-label {
    color: var(--text-tertiary);
  }

  .coverage-value {
    color: var(--text-secondary);
    font-family: var(--font-mono);
  }

  /* Mobile adjustments */
  @media (max-width: 1024px) {
    .content {
      padding: 1.5rem 1rem;
    }

    .command-shortcuts {
      display: none;
    }
  }
</style>
