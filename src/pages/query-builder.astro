---
import BaseLayout from '../layouts/BaseLayout.astro';
import QueryBuilder from '../components/QueryBuilder';
---

<BaseLayout title="Query Builder" description="Build complex queries with boolean logic for Texas campaign finance data">
  <div class="bg-slate-100 min-h-screen">
    <div class="max-w-[1600px] mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Page Header -->
      <div class="mb-6">
        <nav class="text-sm text-slate-500 mb-2">
          <a href="/" class="hover:text-texas-blue">Home</a>
          <span class="mx-2">›</span>
          <a href="/advanced" class="hover:text-texas-blue">Advanced Search</a>
          <span class="mx-2">›</span>
          <span class="text-slate-900">Query Builder</span>
        </nav>
      </div>

      <!-- Query Builder Component -->
      <QueryBuilder client:load />
    </div>
  </div>
</BaseLayout>
