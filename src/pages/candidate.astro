---
import BaseLayout from '../layouts/BaseLayout.astro';
import CandidatePageWrapper from '../components/CandidatePageWrapper';
---

<BaseLayout title="Candidate Profile">
  <div class="bg-slate-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Breadcrumb -->
      <nav class="text-sm text-slate-500 mb-6">
        <a href="/" class="hover:text-texas-blue">Home</a>
        <span class="mx-2">›</span>
        <a href="/search/committees" class="hover:text-texas-blue">Committees</a>
        <span class="mx-2">›</span>
        <span class="text-slate-900">Profile</span>
      </nav>

      <!-- Profile Component -->
      <CandidatePageWrapper client:load />
    </div>
  </div>
</BaseLayout>
