---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContributorSearch from '../../components/ContributorSearch';
---

<BaseLayout title="All Transactions" description="Search all campaign finance transactions in Texas">
  <div class="bg-slate-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <!-- Page Header -->
      <div class="mb-8">
        <nav class="text-sm text-slate-500 mb-2">
          <a href="/" class="hover:text-texas-blue">Home</a>
          <span class="mx-2">â€º</span>
          <span class="text-slate-900">Transactions</span>
        </nav>
        <h1 class="text-3xl font-bold text-slate-900">All Transactions</h1>
        <p class="text-slate-600 mt-2">
          Browse all campaign finance contributions and expenditures with advanced filtering
        </p>
      </div>

      <!-- Transaction Tabs -->
      <div class="flex gap-4 mb-6">
        <button
          id="contrib-tab"
          class="px-4 py-2 font-medium rounded-lg bg-texas-blue text-white"
        >
          Contributions
        </button>
        <button
          id="expend-tab"
          class="px-4 py-2 font-medium rounded-lg text-slate-600 hover:bg-slate-100"
        >
          Expenditures
        </button>
      </div>

      <!-- Search Component (for now, just contributions) -->
      <ContributorSearch client:load initialQuery="" />
    </div>
  </div>
</BaseLayout>
