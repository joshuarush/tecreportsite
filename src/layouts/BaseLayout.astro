---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Search Texas campaign finance records from the Texas Ethics Commission" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} | Texas Campaign Finance Search</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="bg-texas-blue text-white">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <a href="/" class="flex items-center gap-3">
            <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-texas-blue" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <div>
              <span class="text-lg font-semibold">Texas Campaign Finance</span>
              <span class="hidden sm:inline text-sm text-blue-200 ml-2">TEC Data Search</span>
            </div>
          </a>
          <div class="flex items-center gap-4 lg:gap-6">
            <a href="/search/contributors" class="text-sm font-medium text-blue-100 hover:text-white transition-colors hidden sm:block">
              Donors
            </a>
            <a href="/search/committees" class="text-sm font-medium text-blue-100 hover:text-white transition-colors hidden sm:block">
              Committees
            </a>
            <a href="/query-builder" class="text-sm font-medium text-blue-100 hover:text-white transition-colors">
              Advanced
            </a>
            <a href="/advanced" class="px-3 py-1.5 text-sm font-medium bg-white/10 hover:bg-white/20 rounded-lg transition-colors">
              List Builder
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="bg-slate-900 text-slate-400 py-8 mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
          <p class="text-sm">
            Data from the <a href="https://www.ethics.state.tx.us/" target="_blank" rel="noopener noreferrer" class="text-blue-400 hover:text-blue-300">Texas Ethics Commission</a>
          </p>
          <p class="text-sm">
            Records from 2020 to present
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
