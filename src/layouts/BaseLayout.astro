---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "Search Texas campaign finance records from the Texas Ethics Commission" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title} | Armadollar</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <header class="bg-texas-blue text-white">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <a href="/" class="flex items-center gap-3">
            <div class="w-10 h-10 bg-white rounded-lg flex items-center justify-center overflow-hidden">
              <svg class="w-8 h-8" viewBox="0 0 32 32" fill="none">
                <g fill="#002868">
                  <ellipse cx="14" cy="16" rx="9" ry="7"/>
                  <path d="M8 12 Q14 10, 20 12" stroke="white" stroke-width="1.5" fill="none"/>
                  <path d="M7 15 Q14 13, 21 15" stroke="white" stroke-width="1.5" fill="none"/>
                  <path d="M7 18 Q14 16, 21 18" stroke="white" stroke-width="1.5" fill="none"/>
                  <ellipse cx="23" cy="16" rx="3" ry="2.5"/>
                  <path d="M5 16 Q3 16, 3 14" stroke="#002868" stroke-width="2" fill="none" stroke-linecap="round"/>
                  <rect x="9" y="21" width="2" height="3" rx="1"/>
                  <rect x="15" y="21" width="2" height="3" rx="1"/>
                </g>
                <circle cx="25" cy="7" r="5" fill="#16a34a"/>
                <text x="25" y="10" text-anchor="middle" fill="white" font-size="7" font-weight="bold" font-family="Arial">$</text>
              </svg>
            </div>
            <div>
              <span class="text-lg font-semibold">Armadollar</span>
              <span class="hidden sm:inline text-sm text-blue-200 ml-2">Texas Campaign Finance</span>
            </div>
          </a>
          <div class="flex items-center gap-4 lg:gap-6">
            <a href="/search/contributors" class="text-sm font-medium text-blue-100 hover:text-white transition-colors hidden sm:block">
              Donors
            </a>
            <a href="/search/committees" class="text-sm font-medium text-blue-100 hover:text-white transition-colors hidden sm:block">
              Committees
            </a>
            <a href="/query-builder" class="text-sm font-medium text-blue-100 hover:text-white transition-colors">
              Expert Mode
            </a>
            <a href="/advanced" class="px-3 py-1.5 text-sm font-medium bg-white/10 hover:bg-white/20 rounded-lg transition-colors">
              List Builder
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="bg-slate-900 text-slate-400 py-8 mt-auto">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
          <p class="text-sm">
            Data from the <a href="https://www.ethics.state.tx.us/" target="_blank" rel="noopener noreferrer" class="text-blue-400 hover:text-blue-300">Texas Ethics Commission</a>
          </p>
          <p class="text-sm">
            Records from 2020 to present
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
